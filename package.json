{
  "name": "webapi-core-mandelbrot-frontend",
  "version": "1.0.0",
  "description": "TypeScript frontend for CUDA-accelerated Mandelbrot set visualization",
  "private": true,
  "scripts": {
    "prebuild": "npm run generate-constants",
    "build": "npm run lint:check && tsc",
    "watch": "npm run generate-constants && tsc --watch",
    "dev": "tsc --watch",
    "clean": "rimraf wwwroot/js src/shared-constants.ts",
    "generate-constants": "npx tsx Build/generate-constants.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "lint:check": "eslint src/**/*.ts --max-warnings 0",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "quality": "npm run format && npm run lint:fix",
    "quality:check": "npm run format:check && npm run lint:check",
    "test": "jest",
    "dotnet:clean": "dotnet clean",
    "dotnet:restore": "dotnet restore",
    "dotnet:build": "dotnet build",
    "dotnet:test": "dotnet test",
    "dotnet:full-clean": "dotnet clean && rimraf bin obj **/bin **/obj",
    "build:full": "npm run dotnet:clean && npm run dotnet:restore && npm run build && npm run dotnet:build",
    "test:full": "npm run dotnet:clean && npm run dotnet:restore && npm run build && npm run dotnet:build && npm run dotnet:test",
    "test:quick": "npm run dotnet:test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:watch": "jest --coverage --watch",
    "test:ci": "jest --coverage --ci --watchAll=false"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@testing-library/dom": "^10.4.1",
    "@types/glob": "^8.1.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "coverage-istanbul": "^1.1.2",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "glob": "^11.0.3",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jsdom": "^27.0.0",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
